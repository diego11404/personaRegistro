{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "baseUrl": ".",
    "paths": {
      "@model/*": [
        "src/model/*"
      ],
      "@controllers/*": [
        "src/controller/*"
      ]
    }
  },
  "lib": [
    "es2015"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".vscode"
  ]
  
}